@model u22620355_HW03.Models.MaintainVM

@{
    ViewBag.Title = "Maintain";
}

<h2>Maintain</h2>
<br />
<div class="container">
    <div class="row">

        <!-- Types Section -->
        <div class=" col-md-6">
            <h3>Types</h3>
            <br />
            <p>
                @Html.ActionLink("Create New Type", "Create", "Types", null, new { @class = "btn btn-primary", @data_toggle = "modal", @data_target = "#typeModal" })
            </p>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.types[0].name)</th>
                    <th></th>
                </tr>
                @foreach (var type in Model.types)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => type.name)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Types", new { id = type.typeId }, null) |
                            @Html.ActionLink("Delete", "Delete", "Types", new { id = type.typeId }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>

        <!-- Authors Section -->
        <div class=" col-md-6">
            <h3>Authors</h3>
            <br />
            <p>
                @Html.ActionLink("Create New Author", "Create", "Authors", null, new { @class = "btn btn-primary", @data_toggle = "modal", @data_target = "#authorModal" })
            </p>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.authors[0].name)</th>
                    <th>@Html.DisplayNameFor(model => model.authors[0].surname)</th>
                    <th></th>
                </tr>
                @foreach (var author in Model.authors)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => author.name)</td>
                        <td>@Html.DisplayFor(m => author.surname)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Authors", new { id = author.authorId }, null) |
                            @Html.ActionLink("Delete", "Delete", "Authors", new { id = author.authorId }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>

        <!-- Borrows Section -->
        <div class=" col-md-6">
            <h3>Borrowed Books</h3>
            <br />
            <p>
                @Html.ActionLink("Create New Borrow", "Create", "Borrows", null, new { @class = "btn btn-primary", @data_toggle = "modal", @data_target = "#borrowModal" })
            </p>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.borrows[0].studentId)</th>
                    <th>@Html.DisplayNameFor(model => model.borrows[0].bookId)</th>
                    <th>@Html.DisplayNameFor(model => model.borrows[0].takenDate)</th>
                    <th>@Html.DisplayNameFor(model => model.borrows[0].broughtDate)</th>
                    <th></th>
                </tr>
                @foreach (var borrow in Model.borrows)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => borrow.studentId)</td>
                        <td>@Html.DisplayFor(m => borrow.bookId)</td>
                        <td>@Html.DisplayFor(m => borrow.takenDate)</td>
                        <td>@Html.DisplayFor(m => borrow.broughtDate)</td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "Borrows", new { id = borrow.borrowId }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<!-- Modals Section -->
<!--Type Modal--->
<!-- Create Type Modal -->
<div class="modal fade" id="createTypeModal" tabindex="-1" role="dialog" aria-labelledby="createTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="CreateType" asp-controller="Home" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createTypeModalLabel">Create New Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="TypeName">Type Name</label>
                        <input type="text" class="form-control" id="TypeName" name="name" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Type Modal for each Type -->
@foreach (var type in Model.types)
{
    <div class="modal fade" id="editTypeModal-@type.typeId" tabindex="-1" role="dialog" aria-labelledby="editTypeModalLabel-@type.typeId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-action="EditType" asp-controller="Home" method="post">
                    <input type="hidden" name="typeId" value="@type.typeId" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTypeModalLabel-@type.typeId">Edit Type</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="TypeName">Type Name</label>
                            <input type="text" class="form-control" id="TypeName" name="name" value="@type.name" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Delete Type Modal for each Type -->
@foreach (var type in Model.types)
{
    <div class="modal fade" id="deleteTypeModal-@type.typeId" tabindex="-1" role="dialog" aria-labelledby="deleteTypeModalLabel-@type.typeId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-action="DeleteType" asp-controller="Home" method="post">
                    <input type="hidden" name="typeId" value="@type.typeId" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteTypeModalLabel-@type.typeId">Delete Type</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this type: <strong>@type.name</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

